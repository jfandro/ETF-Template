@model ETFTemplate.Models.ContactRequestEmail

@{
    Layout = "~/Views/Emails/_layout.cshtml";
}

@section headers {
    To: @Model.To
    From: @Model.From
    Subject: @Model.Title
}

<h3>Bonjour,</h3>

<p>Une demande de <b>@Model.ContactName</b> a été émise via le formulaire de contact. 
Voici sa demande :</p>
<p>@Html.Raw(Model.Body)</p>
<p>Vous pouvez répondre à l'addresse suivante @Model.ContactEmail ou au téléphone @Model.ContactPhone</p>

<hr />
<table>
    <tr>
        <td>
            <img src="@ApplicationHelper.UserImageUrl" style="width:100px;padding:10px;" />
        </td>
        <td>
            <p>
                <b>@ApplicationHelper.UserSignature</b>
                <br />
                <em>@ApplicationHelper.UserSignature2</em><br />
                Tél @ApplicationHelper.UserPhoneNumber
            </p>
        </td>
    </tr>
</table>



