@model ETFTemplate.Models.LeadConfirmationEmail

@{
    Layout = "~/Views/Emails/_layout.cshtml";
}

@section headers {
    To: @Model.To
    From: @Model.From
    Subject: @Model.Title
}

<h3>Bonjour,</h3>

<div>
    <h2>Synthèse de votre profil</h2>
    <div class="py-3">
        <p>
            Avant de vous recontacter, nous allons analyser plus en détails 
            toutes vos réponses à notre questionnaire afin d'affiner notre proposition
            financière. Lorsque nous aurons terminé cette analyse, nous vous recontacterons
            au numéro de téléphone que vous nous avez laissé.
        </p>
    </div>
    <div class="table-responsive">
        <table id="kyc" class="table table-kyc">
            <thead>
                <tr>
                    <th>A la question</th>
                    <th>Vous avez répondu</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var question in Model.Questions)
            {
                <tr>
                    <td>@question.Question</td>
                    <td>
                        <ul>
                            @foreach (var answer in question.Answers)
                            {
                                <li>@answer.Answer</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<p>Dans l'attente de notre prochaine rencontre.</p>

<p>Bonne journée,<br />
    <strong>Mr jonh Doe</strong></p>