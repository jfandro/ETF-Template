@using System.Configuration;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/Content/fa/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/prettify.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @RenderSection("header", false)

    <style>
        .cover-container {
            max-width: 50%;
        }
    </style>
</head>
<body class="d-flex h-100">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-4">
            <!-- Navigation-->
            <nav class="container-fluid navbar navbar-expand-lg navbar-light py-3 fixed-top p-0 shadow" id="mainNav">
                <div class="container px-4 px-lg-5">
                    <a class="navbar-brand" href="@ApplicationHelper.UserWebSite">@ApplicationHelper.ApplicationName</a>
                    <a class="navbar-brand text-primary" href="#">@RenderSection("title", false)</a>
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarside" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        @RenderSection("menu", false)
                    </div>
                </div>
            </nav>
        </header>
        <main class="py-5">
            @RenderBody()
        </main>
    </div>

    @Html.Partial("_credentials")

    <!-- Latest jquery 1.12 -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js" integrity="sha256-C6CB9UYIS9UJeqinPHWTHVqh/E1uhG5Twh+Y5qFQmYg=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/Scripts/string.format.js"></script>

    <script src="//d3js.org/topojson.v1.min.js"></script>
    <script src="//d3js.org/queue.v1.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>

    <!-- Declare the following controllers to manage all the calls (get and post) to the etfreporting server with API -->
    <script src="https://etfreporting.com/bundles/jquerytools"></script>
    <script src="https://etfreporting.com/bundles/dataviz"></script>
    @Scripts.Render("~/bundles/controllers")

    @RenderSection("scripts", required: false)

</body>
</html>
