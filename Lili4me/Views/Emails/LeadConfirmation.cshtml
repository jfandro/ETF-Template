@model Lili4me.Models.LeadConfirmationEmail

@{
    Layout = "~/Views/Emails/_layout.cshtml";
}

@section headers {
    To: @Model.To
    From: @Model.From
    Subject: @Model.Title
}

<h3>Bonjour,</h3>

<div>
    <h2>Synthèse de votre profil</h2>
    <div class="py-3">
        <p>
            Avant de vous recontacter, nous allons analyserVos réponses à notre questionnaire:
        </p>
    </div>
    <div class="table-responsive">
        <table id="kyc" class="table">
            <thead>
                <tr>
                    <th>A la question</th>
                    <th>Vous avez répondu</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var question in Model.Questions)
            {
                <tr>
                    <td>@question.Question</td>
                    <td>
                        <ul>
                            @foreach (var answer in question.Answers)
                            {
                                <li>@answer.Answer</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<p>Au terme de cette validation, vous recevrez un récapitulatif de votre profil et de la
    proposition jointe.</p>

<p>Bonne journée,</p>