<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link href="~/Content/bootstrap-switch.min.css" rel="stylesheet" />
    <link href="~/Content/prettify.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Your website", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse signoff-container">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Report", "Allocations", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Creation", "Create", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Positions", "Positions", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Operations", "Operations", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Benchmark", "Benchmark", "Home", new { area = "" }, null)</li>
                    <li><a href="#" class="btn-signout signoff-container">Signout</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderSection("header", false)

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Application powered by LILI</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@

    <!-- Latest jquery 1.12 -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js" integrity="sha256-C6CB9UYIS9UJeqinPHWTHVqh/E1uhG5Twh+Y5qFQmYg=" crossorigin="anonymous"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    
    <script src="~/Scripts/settings.js"></script>
    <script src="~/Scripts/session.js"></script>
    <script src="~/Scripts/string.format.js"></script>
    <script src="~/Scripts/bootstrap-switch.js"></script>

    <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>


    <!-- Declare the following controllers to manage all the calls (get and post) to the LILI server with API -->
    <script src="~/Scripts/signinController.js"></script>
    <script src="~/Scripts/portfoliosController.js"></script>
    <script src="~/Scripts/assetsController.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
